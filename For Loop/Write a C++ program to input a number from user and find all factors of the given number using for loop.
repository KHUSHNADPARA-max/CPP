// Write a C++ program to input a number from user and find all factors of the given number using for loop In CPP;

=====================================================CODE=======================================================

#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter The Number : ";
    cin >> n;
    
    for(int i = 1; i <= n; i++)
    {
        if(n % i == 0)
            cout << i << ", ";
    }

    return 0;
}
