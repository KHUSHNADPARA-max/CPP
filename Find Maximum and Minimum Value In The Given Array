//Find Maximum and Minimum Value In The Given Array In CPP
//CODE Is Here

#include<iostream>
#include<climits>

using namespace std;

int getMin(int arr[], int num){
    int min = INT_MAX;
    
    for(int i = 0; i < num; i++){
        if(arr[i] < min){
            min = arr[i];
        }
    }
    // Returning Minnimum Value;
    return min;
}

int getMax(int arr[], int num){
    int max = INT_MIN;
    
    for(int i = 0; i < num; i++){
        if(arr[i] > max){
            max = arr[i];
        }
    }
    // Returning Max Value;
    return max;
}

int main(){
    
    int size;
    cin >> size;
    
    int num [100];
    
    
    // Input Taken For Array.
    for(int i = 0; i < size; i++){
        cin >> num[i];
    }
    
    cout << "Maximum Value Is : " << getMax(num, size) << endl;
    cout << "Minimum Value Is : " << getMin(num, size) << endl;
    
    return 0;
}
