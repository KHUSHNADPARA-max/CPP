// LeetCode : 231. Power of Two

// Runtime Details 0ms Beats 100.00%of users with C++

// CODE Is Here :- 

class Solution {
public:
    bool isPowerOfTwo(int n) {

    int ans = 1;
    for(int i = 0; i <= 30; i++){
       
        if(ans == n){
            return true;
        }
        if(ans < INT_MAX / 2)
        ans = ans * 2;
        
    }
    return false;
    }
};
